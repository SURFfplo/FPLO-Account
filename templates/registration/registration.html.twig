{% extends 'base.html.twig' %}

{% block title %}Account Registreren{% endblock %}

{% block body %}



    <div class="col-md-3"></div>

    <div class="col-md-6">
        <div class="card m-b-20 card-body text-xs-center">
        	<div class="progress progress-sm">
                <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
            </div>
                                    
                                    
                                    
        
            <h2 class="card-title">Aanmaken account</h2>
            <p class="card-text">Klik op de knop 'Aanmaken account' om een account in de  SURF pilot modulaire leeromgeving aan te maken met onderstaande gegevens.</p>           

<table class="table">
    <tbody>
    <tr>
        <th scope="row">Voornaam</th>
        <td>{{ app.user.givenName }}</td>
    </tr>
    <tr>
        <th scope="row">Achternaam</th>
        <td>{{ app.user.sn }}</td>

    </tr>
    <tr>
        <th scope="row">Email</th>
        <td>{{ app.user.mail }}</td>
    </tr>
    </tbody>
</table>
            <a href="{{ path('activation') }}" class="btn btn-inverse">Aanmaken Account</a>
        </div>
    </div>

    <div class="col-md-3"> </div>



{% endblock %}
                    
